---
import "../styles/globals.css";

interface Props {
  title?: string;
}

const { title = "Cloudflare MCP Server" } = Astro.props;
const description = "Use Cloudflare's MCP servers or build your own. Connect AI assistants to Workers, KV, R2, D1, and more â€” deploy MCP servers on Cloudflare's global network.";
---

<!DOCTYPE html>
<html lang="en" data-mode="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- Prevent theme flash - runs before React hydrates -->
    <script is:inline>
      (function() {
        const theme = localStorage.getItem('theme') ||
          (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
        document.documentElement.setAttribute('data-mode', theme);
      })();
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
